{
  "name": "shafa-hono",
  "version": "0.0.0",
  "main": "src/index.ts",
  "scripts": {
    "wrdev": "wrangler dev src/index.ts",
    "wrstage": "wrangler deploy src/index.ts --env stage",
    "wrprod": "wrangler deploy src/index.ts --env production",
    "wrdev-migrate": "npm run wrdev-migrate-local && npm run wrdev-migrate-remote",
    "wrdev-migrate-local": "wrangler d1 migrations apply dev-shafa-hono-db --local",
    "wrdev-migrate-remote": "wrangler d1 migrations apply dev-shafa-hono-db",
    "wrdev-migrate-test": "wrangler d1 migrations apply test-shafa-hono-db --local --env test --persist-to=./test/drizzle-test",
    "wrstage-migrate": "wrangler d1 migrations apply stage-shafa-hono-db --env stage",
    "wrprod-migrate": "wrangler d1 migrations apply prod-shafa-hono-db --env production",
    "generate": "drizzle-kit generate:sqlite --schema=src/schema.ts",
    "test": "npm run wrdev-migrate-test && jest test",
    "format": "prettier --log-level warn --write . && eslint --fix .",
    "check-ts": "tsc --noEmit --target esnext --project tsconfig.json",
    "check-prettier": "prettier --check .",
    "check-eslint": "eslint . --max-warnings 0"
  },
  "dependencies": {
    "@hono/eslint-config": "^0.0.4",
    "@hono/zod-validator": "^0.1.11",
    "drizzle-kit": "^0.19.13",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "hono": "^3.12.3",
    "rimraf": "^5.0.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "jest": "^29.7.0",
    "prettier": "3.2.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "wrangler": "^3.28.1"
  },
  "resolveJsonModule": true
}
