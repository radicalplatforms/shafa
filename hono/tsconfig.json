{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["esnext"],
    "types": ["jest", "@cloudflare/workers-types"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "composite": true,
  },
  "include": [
    "src/**/*",
    "test/**/*",
    ".eslintrc.js",
    "jest.config.js",
    "migrate.ts",
    "drizzle.config.ts",
  ],
}
